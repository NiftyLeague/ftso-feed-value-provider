{
  "name": "ftso-feed-value-provider",
  "version": "1.0.0",
  "description": "Retrieves data from exchanges and supplies current feed values (prices)",
  "author": "0xPlayerOne",
  "private": true,
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"**/*.{js,ts,md,mdx,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,md,mdx,json}\"",
    "type:check": "tsc --noEmit",
    "validate": "pnpm lint:check && pnpm format:check && pnpm type:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:verbose": "VERBOSE_TEST_LOGS=true jest",
    "test:no-suppress": "SUPPRESS_TEST_LOGS=false jest",
    "test:quiet": "SUPPRESS_TEST_LOGS=true jest --silent",
    "test:accuracy": "jest --testPathPatterns=accuracy --testTimeout=100000 --maxWorkers=1",
    "test:endurance": "jest --config=jest.endurance.config.js",
    "test:integration": "jest --testPathPatterns=integration --testTimeout=100000 --maxWorkers=1",
    "test:performance": "jest --testPathPatterns=performance --testTimeout=100000 --maxWorkers=1",
    "test:unit": "jest --testPathIgnorePatterns=accuracy endurance integration performance",
    "validate-config": "ts-node -r tsconfig-paths/register src/config/validate-config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.6",
    "@nestjs/core": "^11.1.6",
    "@nestjs/platform-express": "^11.1.6",
    "@nestjs/swagger": "^11.2.0",
    "axios": "^1.11.0",
    "ccxt": "^4.5.3",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^17.2.2",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.6",
    "reflect-metadata": "^0.2.2",
    "rxjs": "^7.8.2",
    "uuid": "^11.1.0",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.10",
    "@nestjs/schematics": "^11.0.7",
    "@nestjs/testing": "^11.1.6",
    "@types/express": "^5.0.3",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.3.1",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.3",
    "@types/uuid": "^10.0.0",
    "@types/ws": "^8.18.1",
    "@typescript-eslint/eslint-plugin": "^8.42.0",
    "@typescript-eslint/parser": "^8.42.0",
    "eslint": "^9.35.0",
    "eslint-config-prettier": "^10.1.8",
    "eslint-plugin-prettier": "^5.5.4",
    "jest": "^30.1.3",
    "prettier": "^3.6.2",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.4",
    "swagger-typescript-api": "^13.2.9",
    "ts-jest": "^29.4.1",
    "ts-loader": "^9.5.4",
    "ts-node": "^10.9.2",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.9.2"
  },
  "engines": {
    "node": ">=22"
  },
  "engineStrict": true,
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
