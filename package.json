{
  "name": "ftso-feed-value-provider",
  "version": "1.0.0",
  "description": "Retrieves data from exchanges and supplies current feed values (prices)",
  "author": "0xPlayerOne",
  "private": true,
  "license": "GPL-3.0-only",
  "scripts": {
    "build": "nest build",
    "start": "nest start",
    "start:dev": "nest start --watch",
    "start:debug": "nest start --debug --watch",
    "start:prod": "node dist/main",
    "lint": "eslint \"src/**/*.ts\" --fix",
    "lint:check": "eslint \"src/**/*.ts\"",
    "format": "prettier --write \"**/*.{js,ts,md,mdx,json}\"",
    "format:check": "prettier --check \"**/*.{js,ts,md,mdx,json}\"",
    "type:check": "tsc --noEmit",
    "validate": "pnpm lint:check && pnpm format:check && pnpm type:check",
    "test": "jest",
    "test:watch": "jest --watch",
    "test:cov": "jest --coverage",
    "test:debug": "node --inspect-brk -r tsconfig-paths/register -r ts-node/register node_modules/.bin/jest --runInBand",
    "test:e2e": "jest --config ./test/jest-e2e.json",
    "test:comprehensive": "ts-node src/__tests__/test-runner.ts",
    "test:unit": "ts-node src/__tests__/test-runner.ts -- --category unit",
    "test:integration": "ts-node src/__tests__/test-runner.ts -- --category integration",
    "test:accuracy": "ts-node src/__tests__/test-runner.ts -- --category accuracy",
    "test:performance": "ts-node src/__tests__/test-runner.ts -- --category performance",
    "test:load": "jest --testPathPattern=\"load-testing.spec.ts\" --testTimeout=300000 --maxWorkers=1",
    "test:latency": "jest --testPathPattern=\"latency-testing.spec.ts\" --testTimeout=180000 --maxWorkers=1",
    "test:endurance": "jest --testPathPattern=\"endurance-testing.spec.ts\" --testTimeout=1800000 --maxWorkers=1",
    "test:backtesting": "jest --testPathPattern=\"backtesting-framework.spec.ts\" --testTimeout=300000 --maxWorkers=1",
    "validate-config": "ts-node -r tsconfig-paths/register src/config/validate-config.ts"
  },
  "dependencies": {
    "@nestjs/common": "^11.1.3",
    "@nestjs/core": "^11.1.3",
    "@nestjs/platform-express": "^11.1.3",
    "@nestjs/swagger": "^11.2.0",
    "@types/ws": "^8.18.1",
    "axios": "^1.11.0",
    "ccxt": "^4",
    "class-transformer": "^0.5.1",
    "class-validator": "^0.14.2",
    "dotenv": "^16.4.5",
    "helmet": "^8.1.0",
    "nodemailer": "^7.0.5",
    "reflect-metadata": "^0.2.0",
    "rxjs": "^7.8.1",
    "ws": "^8.18.3"
  },
  "devDependencies": {
    "@nestjs/cli": "^11.0.7",
    "@nestjs/schematics": "^11.0.5",
    "@nestjs/testing": "^11.1.3",
    "@types/express": "^5.0.3",
    "@types/jest": "^29.5.2",
    "@types/node": "^24.0.1",
    "@types/nodemailer": "^7.0.1",
    "@types/supertest": "^6.0.0",
    "@typescript-eslint/eslint-plugin": "^8.34.0",
    "@typescript-eslint/parser": "^8.34.0",
    "eslint": "^9.28.0",
    "eslint-config-prettier": "^10.1.5",
    "eslint-plugin-prettier": "^5.0.0",
    "jest": "^30.0.0",
    "prettier": "^3.0.0",
    "source-map-support": "^0.5.21",
    "supertest": "^7.1.1",
    "swagger-typescript-api": "^13.0.3",
    "ts-jest": "^29.1.0",
    "ts-loader": "^9.4.3",
    "ts-node": "^10.9.1",
    "tsconfig-paths": "^4.2.0",
    "typescript": "^5.1.3"
  },
  "engines": {
    "node": ">=22"
  },
  "engineStrict": true,
  "packageManager": "pnpm@10.15.0+sha512.486ebc259d3e999a4e8691ce03b5cac4a71cbeca39372a9b762cb500cfdf0873e2cb16abe3d951b1ee2cf012503f027b98b6584e4df22524e0c7450d9ec7aa7b"
}
